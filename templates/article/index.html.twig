{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}

    <div class="container">
        <div class="text-center">
            <h1 class="">articles</h1>
        </div>


        <div class="w-25 m-auto">
            {{ form_start(formSearch) }}
            {{ form_row(formSearch.category) }}
            <button type="submit">rechercher</button>
            {{ form_end(formSearch) }}
        </div>

        <div class="container mt-5">
            <div class="card-columns">
                {% for article in articles %}
                    <div class="card">

                        <a href="{{ path('article_show', {'id': article.id}) }}">

                            <img class="card-img-top" src="{{ article.picture }}">
                            <div class="card-body">
                                <h3 class="card-title">{{ article.name }}</h3>
                                <h5 class="card-title">{{ article.category.name }}</h5>
                                <p class="card-text">
                                    {{ article.description }}
                                </p>
                                {#                            <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>#}
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    </div>
{% endblock %}
