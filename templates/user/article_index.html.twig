{% extends 'account/index.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="text-center">
            <h1>articles</h1>
        </div>
        <a class="btn btn-danger" href="{{ path('user_indexarticle_new') }}">Create a new article</a>
        <div class="container mt-5">
            <div class="card-columns">
                {% for article in articles %}
                    <div class="card">
                            <img class="card-img-top" src="{{ article.picture }}">
                            <div class="card-body">
                                <h3 class="card-title">{{ article.name }}</h3>
                                <h5 class="card-title">{{ article.category.name }}</h5>
                                <p class="card-text">
                                    {{ article.description }}
                                </p>
                                {#                            <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>#}
                                <a class="btn btn-danger" href="{{ path('user_indexarticle_edit',{id:article.id}) }}">Edit</a>
                                <a class="btn btn-danger" href="{{ path('user_indexarticle_delete',{id:article.id}) }}">Delete</a>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    </div>
{% endblock %}
