{% extends 'account/index.html.twig' %}

{% block title %}Workshop index{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <div class="text-center">
            <h1 class="h1_christmas">Ateliers</h1>
        </div>
        <a class="btn btn-danger" href="{{ path('user_indexworkshop_new') }}">Creer un nouvel atelier </a>

        <div class="mt-5 container">
                <div class="card-columns">
                    {% for workshop in workshops %}
                    <div class="card">
                        <a href="">
                            <img class="card-img-top" src="{{ workshop.picture }}">
                            <div class="card-body">
                                <h3 class="card-title">{{ workshop.name }}</h3>
                                <h5 class="card-title">{{ workshop.category.name }}</h5>
                                <p class="card-text">
                                    {{ workshop.description }}
                                </p>
                                <a class="btn btn-danger" href="{{ path('user_indexworkshop_edit',{id:workshop.id}) }}">Edit</a>
                                <a class="btn btn-danger"
                                   href="{{ path('user_indexworkshop_delete',{'id': workshop.id}) }}">Delete</a>
                                {#                            <p class="card-text"><small class="text-muted"><i class="fas fa-eye"></i>1000<i class="far fa-user"></i>admin<i class="fas fa-calendar-alt"></i>Jan 20, 2018</small></p>#}
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
