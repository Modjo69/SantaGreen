{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row" id="top-profile">
            <img class="image-fluid" id="background-profile"
                 src="https://therightsofnature.org/wp-content/uploads/2018/01/turkey-3048299_1920-1366x550.jpg"/>
            <img id="profile-picture"
                 src="https://i.pinimg.com/originals/97/e4/2a/97e42a82fc7911961d3ca55f54d1372c.jpg"/>
        </div>
        <div class="row" id="profile-menu">
            <h4>Username</h4>
        </div>
        <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab"
                   aria-controls="pills-home" aria-selected="true">Mon profil</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab"
                   aria-controls="pills-profile" aria-selected="false">Ajouter un produit</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab"
                   aria-controls="pills-contact" aria-selected="false">Ajouter un atelier</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact2" role="tab"
                   aria-controls="pills-contact" aria-selected="false">Ajouter un tutoriel</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                <h4 style="text-align:center;">My Personnal Informations</h4>
                {{ form_start(form) }}
                {{ form_end(form) }}
                <h4 style="text-align:center;">My Address</h4>
                {{ form_start(formAddress) }}
                {{ form_end(formAddress) }}
            </div>
            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                {{ form_start(formArticle) }}
                {{ form_end(formArticle) }}
            </div>
            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                {{ form_start(formWorkshop) }}
                {{ form_end(formWorkshop) }}
            </div>
            <div class="tab-pane fade" id="pills-contact2" role="tabpanel" aria-labelledby="pills-contact-tab">dsd</div>

        </div>
    </div>


{% endblock %}
